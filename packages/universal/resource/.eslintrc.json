{
  "root": true,
  "ignorePatterns": ["node_modules", "dist", "html", "tests"],
  "plugins": ["@starbeam"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/commonjs"],
      "files": ["index.ts", "src/**/*.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": ["*.json"]
    }
  ]
}
