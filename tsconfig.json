{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "outDir": "dist/root",
    "skipLibCheck": true,
    "types": ["./packages/env"],

    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleDetection": "force",

    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext"
  },
  "exclude": [
    "dist/**/*",
    "node_modules/**",
    "**/dist/**",
    "**/node_modules/**"
  ],
  "include": [
    "packages/**/rollup.config.mjs",
    "rollup.config.mjs",
    "vitest.*.ts",
    "vitest.*.mts",
    "vite.config.ts",
    "vitest.workspace.mjs",
    "vitest.config.mts"
  ],
  "references": [
    { "path": "./packages/tsconfig.packages.json" },
    { "path": "./packages/tsconfig.rollup.json" },
    { "path": "./packages/x/devtool/tsconfig.json" },
    { "path": "./workspace/tsconfig.json" }
  ]
}
