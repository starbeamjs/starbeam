{
  "root": true,
  "ignorePatterns": [
    "*",
    "!package.json",
    "!.eslintrc.json",
    "!.eslintrc.repo.json",
    "!.vscode/*.json",
    "!tsconfig.json",
    "!vitest.workspace.mjs",
    "!rollup.config.mjs",
    "!.knip.json",
    "**/node_modules"
  ],

  "plugins": ["@starbeam"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/tight"],
      "files": ["vitest.*.{mts,ts}"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    },
    {
      "extends": ["plugin:@starbeam/esm"],
      "files": ["rollup.config.{mjs,js}"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": [
        ".eslintrc.json",
        ".eslintrc.*.json",
        ".knip.json",
        "tsconfig.json",
        "package.json",
        "packages/*/*/{package,.eslintrc}.json",
        "packages/*/*/tests/{package,.eslintrc}.json"
      ]
    }
  ]
}
