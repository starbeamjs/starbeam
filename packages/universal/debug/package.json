{
  "name": "@starbeam/debug",
  "version": "0.8.0",
  "type": "module",
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    "default": "./index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.cjs"
      }
    },
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts"
  },
  "starbeam": {
    "inline": [
      "stacktracey",
      "get-source",
      "source-map",
      "data-uri-to-buffer",
      "as-table",
      "printable-characters",
      "chalk"
    ],
    "type": "library:public"
  },
  "scripts": {
    "test:lint": "eslint",
    "test:specs": "vitest --run",
    "test:types": "tsc -b"
  },
  "dependencies": {
    "@domtree/flavors": "workspace:^",
    "@starbeam/core-utils": "workspace:^",
    "@starbeam/interfaces": "workspace:^",
    "@starbeam/shared": "workspace:^",
    "@starbeam/verify": "workspace:^",
    "buffer": "^6.0.3",
    "stacktracey": "^2.1.8"
  },
  "devDependencies": {
    "@starbeam-dev/build-support": "workspace:*",
    "@types/node": "^18.7.23",
    "chalk": "^5.0.1"
  },
  "pnpm": {
    "overrides": {
      "stacktracey": "file:./stacktracey.tgz"
    }
  }
}
