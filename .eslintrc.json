{
  "root": true,
  "ignorePatterns": [
    "*",
    "!.eslintrc.json",
    "!tsconfig.json",
    "!package.json",
    "!.vscode"
  ],

  "plugins": ["@starbeam"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/tight"],
      "files": ["*.ts", "*.d.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    },
    {
      "extends": ["plugin:@starbeam/tight"],
      "files": ["vitest.*.{mts,ts}"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    },
    {
      "extends": ["plugin:@starbeam/esm"],
      "files": ["rollup.config.{mjs,js}"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": [
        ".eslintrc.json",
        ".eslintrc.*.json",
        ".knip.json",
        ".vscode/*.json",
        "tsconfig.json",
        "package.json"
      ]
    }
  ]
}
