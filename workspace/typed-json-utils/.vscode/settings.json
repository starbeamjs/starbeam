{
  "explorer.excludeGitIgnore": true,
  "explorer.fileNesting.enabled": true,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.sortOrderLexicographicOptions": "upper",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.spec.ts",
    "package.json": "pnpm-lock.yaml, pnpm-workspace.yaml, tsconfig.json, tsconfig.*.json",
    ".npmrc": ".eslintrc.json, .*ignore, .*rc, *.config.mjs, *.config.mts, *.config.ts, *.config.js"
  },

  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.formatDocument": "always"
  },

  "eslint.validate": ["typescript", "json", "jsonc"],
  "eslint.workingDirectories": [{ "mode": "auto" }]
}
