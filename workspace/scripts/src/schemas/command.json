{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "FlagInfo": {
      "anyOf": [
        {
          "pattern": "^-.*$",
          "type": "string"
        },
        {
          "properties": {
            "default": {
              "type": "boolean"
            },
            "description": {
              "type": "string"
            },
            "short": {
              "pattern": "^-.*$",
              "type": "string"
            }
          },
          "required": [
            "description"
          ],
          "type": "object"
        }
      ]
    },
    "Flags": {
      "additionalProperties": {
        "$ref": "#/definitions/FlagInfo"
      },
      "type": "object"
    }
  },
  "properties": {
    "description": {
      "description": "The description of the command",
      "type": "string"
    },
    "flags": {
      "$ref": "#/definitions/Flags",
      "description": "The command's flags"
    },
    "name": {
      "description": "The name of the command",
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "description",
    "name"
  ],
  "type": "object"
}