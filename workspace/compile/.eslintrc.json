{
  "root": true,
  "ignorePatterns": ["node_modules", "dist", "html", "tests"],
  "plugins": ["@starbeam-dev"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam-dev/typed-js"],
      "files": ["./index.js", "src/**/*.js"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam-dev/tight"],
      "files": ["./index.d.ts", "src/**/*.d.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam-dev/json:recommended"],
      "files": ["*.json"]
    }
  ]
}
