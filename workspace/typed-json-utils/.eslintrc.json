{
  "root": true,
  "ignorePatterns": ["node_modules", "dist", "html", "tests"],
  "plugins": ["@starbeam-dev"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam-dev/tight"],
      "files": ["index.ts", "src/**/*.ts", "*.mts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam-dev/json:recommended"],
      "files": ["*.json"]
    }
  ]
}
