{
  "name": "@starbeam-workspace/root",
  "version": "1.0.0",
  "type": "module",
  "types": "src/index.ts",
  "main": "src/index.ts",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:scripts": "tsc -p ./.config/tsconfig/tsconfig.rollup.json",
    "build:packages": "rollup -c ./rollup.config.js",
    "build": "esno ./scripts/index.ts build",
    "prepack": "pnpm run build",
    "dev": "esno ./scripts/index.ts",
    "demo": "esno ./scripts/index.ts demo",
    "test": "vitest",
    "test:dev": "vitest --mode=development",
    "test:prod": "PROD=1 DEV= vitest",
    "test:types": "tsc --build",
    "test:lint": "eslint --cache",
    "test:all": "esno ./scripts/scripts.ts test",
    "check:types": "tsc --build",
    "check:unused": "esno ./scripts/index.ts unused",
    "check:lint": "eslint --cache -c ./.eslintrc.json --ext .ts,.tsx .",
    "release": "esno ./scripts/index.ts release"
  },
  "devDependencies": {
    "typescript": "*",
    "vite": "*",
    "vitest": "*",
    "@vitest/ui": "*",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-proposal-decorators": "^7.19.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.19.0",
    "@changesets/cli": "^2.24.4",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "magic-string": "^0.26.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "tslib": "^2.4.0",
    "eslint-config-airbnb": "^19.0.4",
    "jsdom": "^20.0.0",
    "happy-dom": "^6.0.4"
  },
  "starbeam": {
    "used": [
      {
        "reason": "vscode eslint pulled in depcheck's .eslintrc.yml",
        "packages": [
          "eslint-config-airbnb",
          "@babel/eslint-parser"
        ]
      },
      {
        "reason": "babel",
        "packages": [
          "@babel/plugin-proposal-decorators",
          "@babel/plugin-syntax-dynamic-import",
          "@babel/plugin-transform-runtime",
          "@babel/preset-env",
          "@babel/preset-typescript"
        ]
      },
      {
        "reason": "vite.config.ts",
        "packages": [
          "vite"
        ]
      },
      {
        "reason": ".changeset/config.json",
        "packages": [
          "@changesets/cli"
        ]
      },
      {
        "reason": "package.json scripts",
        "packages": [
          "esno"
        ]
      },
      {
        "reason": "build packages",
        "packages": [
          "typescript",
          "tslib",
          "@babel/runtime"
        ]
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^4.8.3",
      "vite": "3.1.3",
      "vue": "^3.2.39",
      "vitest": "0.23.4",
      "@vitest/ui": "0.23.4",
      "stacktracey": "file:./stacktracey.tgz"
    },
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "package.json",
      "pnpm-workspace.yaml",
      "scripts"
    ]
  },
  "volta": {
    "node": "18.9.0"
  }
}
